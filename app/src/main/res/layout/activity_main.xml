<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:elevation="1dp" android:id="@+id/appBarLayout">
        <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:menu="@menu/top_app_bar"
                android:background="@color/top_app_bar_color">
            <TextView
                    android:text="Geo-location"
                    android:textColor="@color/icon_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="24sp"/>
            <ImageButton android:layout_width="50dp"
                         android:layout_height="wrap_content"
                         android:backgroundTint="@color/top_app_bar_color"
                         app:srcCompat="@drawable/add_location_alt"
                         android:id="@+id/btNewRoute"
                         android:layout_gravity="right"
                         app:tint="@color/icon_color"
                         tools:ignore="RtlHardcoded"/>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView android:layout_width="81dp"
               android:layout_height="82dp"
               app:srcCompat="@drawable/fmd_bad"
               android:id="@+id/alert_icon"
               app:tint="@color/alert_icon_color"
               tools:ignore="MissingConstraints,RtlHardcoded"
               android:layout_marginTop="140dp"
               app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="165dp"
               android:layout_marginEnd="165dp"
               app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:layout_width="251dp"
              android:layout_height="81dp"
              android:textAlignment="center"
              android:textSize="24sp"
              android:textColor="@color/alert_text_color"
              android:id="@+id/alert_message"
              android:text="EstÃ¡ vazio por aqui adicione um novo local"
              tools:ignore="MissingConstraints"
              android:layout_marginTop="25dp"
              app:layout_constraintTop_toBottomOf="@+id/alert_icon"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="122dp"
              android:layout_marginEnd="122dp"
              app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rout_list"
            android:layout_width="406dp"
            android:layout_height="671dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
